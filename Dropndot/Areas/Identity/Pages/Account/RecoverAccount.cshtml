@page
@model RecoverAccountModel
@{
    ViewData["Title"] = "Answer Security Question";
    Layout = "~/Pages/Shared/_LoginLayout.cshtml";
}
<br />
<br />
<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.SecurityQuestion"></label>
                <input asp-for="Input.Email" class="form-control" value="@ViewData["Email"]" style="display:none" />
                <input asp-for="Input.SecurityQuestion" class="form-control" value="@ViewData["SecurityQuestion"]" readonly="@(true)" />
            </div>
            <div class="form-group">
                <label asp-for="Input.SecurityAnswer"></label>
                <input asp-for="Input.SecurityAnswer" class="form-control" />
                <span asp-validation-for="Input.SecurityAnswer" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Next</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
